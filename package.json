{
  "name": "groundwork",
  "description": "Scaffold out any project quickly",
  "version": "0.1.0",
  "repository": "aniftyco/groundwork",
  "bin": "lib/bin.js",
  "author": {
    "name": "Nifty Development, LLC",
    "email": "support@aniftyco.com",
    "url": "https://aniftyco.com"
  },
  "contributors": [
    {
      "name": "Josh Manders",
      "url": "https://twitter.com/joshmanders"
    }
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "files": [
    "lib"
  ],
  "eslintConfig": {
    "extends": "nifty",
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-inferrable-types": "off"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "./tests/tsconfig.json"
      }
    }
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^26.0.5",
    "@types/minimist": "^1.2.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.0.27",
    "@types/ora": "^3.2.0",
    "@types/tar": "^4.0.3",
    "eslint": "^7.5.0",
    "eslint-config-nifty": "^3.0.0-rc.8",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@octokit/core": "^3.2.4",
    "chalk": "^4.1.0",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "ora": "^4.0.5",
    "tar": "^6.0.2"
  }
}
